{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": ["ES6", "DOM"],
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@touch2fa/core/*": ["packages/core/src/*"],
        "@touch2fa/browser-extension/*": ["packages/browser-extension/src/*"],
        "@touch2fa/ui/*": ["packages/ui/src/*"]
      }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  